# 环境配置示例 - 开发环境
# 复制此文件为 .env.development 并根据需要修改

# ========================================
# 环境配置
# ========================================
ENVIRONMENT=development

# ========================================
# 日志配置
# ========================================

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
# development默认: DEBUG
# staging默认: DEBUG
# production默认: INFO
LOG_LEVEL=DEBUG

# 结构化日志（JSON格式）
# true: JSON格式，便于机器解析
# false: 人类可读格式（推荐开发环境）
STRUCTURED_LOGGING=false

# 详细日志（包含DEBUG payload等）
ENABLE_DETAILED_LOGGING=true

# 日志采样率（0.0-1.0）
# 1.0 = 100%记录，0.1 = 10%采样
LOG_SAMPLE_RATE=1.0

# ========================================
# 监控配置
# ========================================

# 启用监控
ENABLE_MONITORING=true

# 慢查询阈值（秒）
# 超过此时间的操作将被记录为慢查询
SLOW_QUERY_THRESHOLD=2.0

# ========================================
# 其他配置
# ========================================

# Redis配置（如果使用）
# REDIS_HOST=localhost
# REDIS_PORT=6379

# API配置
# TAVILY_API_KEY=your_key_here
# BOCHA_API_KEY=your_key_here
