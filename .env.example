# ============================================
# 智能项目分析器 - 环境变量配置示例
# ============================================

# -------------------- LLM 配置 --------------------

# OpenAI API配置
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，使用国内代理时修改

# Anthropic Claude API配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -------------------- Vision API 配置 --------------------

# Vision API 提供商选择（openai 或 gemini）
VISION_PROVIDER=gemini  # 推荐：开发环境使用gemini（免费15次/分钟）

# Google Gemini API Key（如果使用Gemini）
GOOGLE_API_KEY=your_gemini_api_key_here

# 是否启用Vision API（true/false）
ENABLE_VISION_API=true

# -------------------- Redis 配置 --------------------

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # 如果Redis设置了密码

# -------------------- 服务器配置 --------------------

# API服务器端口
API_PORT=8000

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# -------------------- 文件上传配置 --------------------

# 文件上传目录
UPLOAD_DIR=./data/uploads

# 最大文件大小（字节）
MAX_FILE_SIZE=10485760  # 10MB

# -------------------- 其他配置 --------------------

# 环境（development, production）
ENV=development

# 调试模式
DEBUG=true

# ==================== 腾讯云内容安全配置 (v1.0 新增) ====================

# 腾讯云API密钥（使用子账号密钥，遵循最小权限原则）
TENCENT_CLOUD_SECRET_ID=AKID_your_secret_id_here  # 子账号sf2025的SecretId
TENCENT_CLOUD_SECRET_KEY=your_secret_key_here      # 子账号sf2025的SecretKey
TENCENT_CLOUD_REGION=ap-guangzhou                  # 服务地域（ap-guangzhou/ap-beijing/ap-shanghai）

# 内容安全应用配置
TENCENT_CONTENT_SAFETY_APP_ID=1997127090860864256  # 应用ID（已创建）
TENCENT_CONTENT_SAFETY_BIZTYPE_TEXT=txt            # 文本审核BizType（默认：txt）
TENCENT_CONTENT_SAFETY_BIZTYPE_IMAGE=pic           # 图片审核BizType（默认：pic）

# 功能开关
ENABLE_TENCENT_CONTENT_SAFETY=true                 # 是否启用腾讯云内容安全（生产环境必须true）

# 高级配置（可选）
TENCENT_CONTENT_SAFETY_TIMEOUT=5                   # API调用超时时间（秒），默认5秒
TENCENT_CONTENT_SAFETY_RETRY_TIMES=2               # 失败重试次数，默认2次
TENCENT_CONTENT_SAFETY_CACHE_TTL=3600              # 相同内容缓存时间（秒），默认1小时
