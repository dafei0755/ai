# 环境配置示例 - 生产环境
# 复制此文件为 .env.production 并根据需要修改

# ========================================
# 环境配置
# ========================================
ENVIRONMENT=production

# ========================================
# 日志配置
# ========================================

# 日志级别: INFO（生产环境推荐）
LOG_LEVEL=INFO

# 结构化日志（生产环境推荐开启）
STRUCTURED_LOGGING=true

# 详细日志（生产环境默认关闭）
ENABLE_DETAILED_LOGGING=false

# 日志采样率（生产环境建议10%）
LOG_SAMPLE_RATE=0.1

# ========================================
# 监控配置
# ========================================

# 启用监控
ENABLE_MONITORING=true

# 慢查询阈值（秒）
SLOW_QUERY_THRESHOLD=3.0

# ========================================
# 安全配置
# ========================================

# 确保在生产环境中设置真实的API密钥
# 不要在代码中硬编码密钥！
TAVILY_API_KEY=${TAVILY_API_KEY}
BOCHA_API_KEY=${BOCHA_API_KEY}
ARXIV_API_KEY=${ARXIV_API_KEY}

# ========================================
# 性能配置
# ========================================

# Redis配置
REDIS_HOST=${REDIS_HOST:-localhost}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_DB=${REDIS_DB:-0}
REDIS_PASSWORD=${REDIS_PASSWORD}

# 数据库连接池
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
